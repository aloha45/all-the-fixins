<%- include('../partials/header') %>
    <h5>Worth playin' for?</h5>
    <div class="card" style="width: 18rem;">
        <img src="<%= user.avatar ? user.avatar : 'http://theoldreader.com/kittens/300/300/' %>" alt="User Profile Picture">
        <div class="card-body">
          <h5 class="card-title"><%= user.name %> <span class="badge badge-secondary"><%= user.tribe %></span></h5>
          <p class="card-text"><%= user.email %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Castaway Since: <%= user.createdAt.toLocaleString().split(',')[0] %></li>
          <% if (user.tribe) { %>
          <li class="list-group-item" id="userTribe">Tribe: <%= user.tribe %></li>
          <% } %>
          <% if (user.allianceMembers.length) { %>
            <li class="list-group-item" id="userAlliance">Alliance Members:<br>
              <% user.allianceMembers.forEach(a => { %>
                <a href="/users/<%= a._id %>"><%= a.name %></a><br>
                <% }) %>
              </li>
          <% } %>
        </ul>
      </div>
      <br>
      <h2>Change your profile</h2>
      <form action="/users/profile/<%= user._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="exampleFormControlInput1">User Avatar Img Link:</label>
          <input type="text" name="avatar" class="form-control" id="exampleFormControlInput1" value="<%= user.avatar %>">
        </div>
        <div class="form-group">
          <label for="exampleFormControlSelect1">Choose your tribe:</label>
          <select name="tribe" class="form-control" id="exampleFormControlSelect1">
            <option value="Brains">Brains</option>
            <option value="Brawn">Brawn</option>
            <option value="Beauty">Beauty</option>
            <option value="Heroes">Heroes</option>
            <option value="Villains">Villains</option>
            <option value="Healers">Healers</option>
            <option value="Hustlers">Hustlers</option>
            <option value="Davids">Davids</option>
            <option value="Goliaths">Goliaths</option>
          </select>
          <br>
          <button type="submit" class="btn btn-info">Submit</button>
        </form>
        </div>
<%- include('../partials/footer') %>